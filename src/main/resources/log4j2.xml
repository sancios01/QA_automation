<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
	<Appenders>
		<Console name="console" target="SYSTEM_OUT">
			<PatternLayout
					pattern="%highlight{%-1level}{FATAL=bg_red, ERROR=red, WARN=yellow, INFO=green} (%F:%L)
      %msg%n%throwable"/>
		</Console>

		<File name="FILEOUT" fileName="logger.log" append="true" >
			<PatternLayout pattern="{%date{DEFAULT}} %msg%n%throwable" />
		</File>
	</Appenders>

	<Loggers>
		<Root level="debug" additivity="false">
			<AppenderRef ref="FILEOUT" level="debug" />
			<AppenderRef ref="console" level="debug" />
		</Root>
	</Loggers>
</Configuration>